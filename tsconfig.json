{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true
  },
  "include": ["src/**/*.ts", "tests//*.ts", "vite.config.ts"],
  "exclude": ["node_modules"]
}
